
<%= simple_form_for(@event) do |f| %>
<%= f.error_notification %>

<div class="field">
  <div class="control">
    <%= f.input :title, label: "title", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "How's it going to be called?" %> 
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.input :event, label: "event", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Give your event a description" autofocus: true %>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.input :event, label: "location", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Where is it going to be?" %>
  </div>
</div>

<div class="field">
  <div class="control">
     <%= f.input :event, label: "date", input_html: { class: "datetime_select "}, wrapper: false, label_html: {class: "label"}, placeholder: "Where is it going to be?" %>
  </div>
</div>

<%= f.button :submit, class: "button is-info" %>
<% end %>