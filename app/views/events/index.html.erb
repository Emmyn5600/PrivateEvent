<p id="notice"><%= notice %></p>

<div class="event-container column is-half is-offset-one-quarter">
<h1>Events</h1>

  <table>
    <thead>
      <tr>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.event %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
<br>

<%= link_to 'New Event', new_event_path %>
</div>
